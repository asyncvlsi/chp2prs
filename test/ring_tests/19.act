
defproc buf (chan?(int<8>) L1, L2; chan!(int<8>) R; bool b)
{
    int<8> x, y, z;
    chp {
        *[
            L1?x; L2?y; 

            [  b   -> z:=x+y
            []else -> z:=x-y
            ];

            R!z
        ]
    }
}

