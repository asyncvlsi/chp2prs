// --------------------------------------------------------

defproc two_to_four_brs (a1of1 in; a1of1 out)
{
    bool x, _out_r, _Reset;
    prs {

        Reset => _Reset-

        _Reset & in.r & out.a -> x-
       ~_Reset | (~in.r & ~out.a) -> x+

        _Reset & in.r & x -> _out_r-
        ~_Reset | ~x -> _out_r+

        _out_r => out.r-

        x -> in.a-
        ~x & ~out.a -> in.a+
    }
}

