defproc acelem3_r (bool in[3]; bool out)
{
  bool _out;
  prs {
      (in[0] & in[2]) -> _out-
      (~in[0] & ~in[1] & ~in[2]) -> _out+
      Reset | _out => out-
  }   
}

template<pint N>
defproc acelem_r (bool in_f; bool in_t; bool in[N]; bool out)
{
  // one unused input
  { N>=1 : " 3 or more inputs needed" };
  bool _out;
  prs {

      in_t & (& i : N : in[i]) -> _out-
      ~in_t & ~in_f & (& i : N : ~in[i] ) -> _out+
      Reset | _out => out-
  }   
}

